{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build Active File with g++",
            "type": "shell",
            "command": "C:\\mingw\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",                        // للـ debugging info
